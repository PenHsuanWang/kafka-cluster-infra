# Kafka Stress Test Configuration
# Copy this file to .env and customize for your environment

# ==============================================
# Kafka Cluster Configuration
# ==============================================

# Broker addresses (comma-separated)
# Local: localhost:9092,localhost:9093,localhost:9094
# Remote: vm1.example.com:9092,vm2.example.com:9092,vm3.example.com:9092
KAFKA_BROKERS=localhost:9092,localhost:9093,localhost:9094

# Topic configuration
TEST_TOPIC=stress-test-topic
TOPIC_PARTITIONS=12
TOPIC_REPLICATION_FACTOR=3
TOPIC_MIN_ISR=2

# ==============================================
# Producer Test Configuration
# ==============================================

# Number of concurrent producers
NUM_PRODUCERS=10

# Messages per producer
MESSAGES_PER_PRODUCER=10000

# Message size in bytes (1024 = 1KB, 10240 = 10KB)
MESSAGE_SIZE_BYTES=1024

# ==============================================
# Consumer Test Configuration
# ==============================================

# Number of consumer groups
NUM_CONSUMER_GROUPS=5

# Consumers per group
CONSUMERS_PER_GROUP=3

# Test duration in seconds
TEST_DURATION_SECONDS=300

# ==============================================
# Remote Testing Examples
# ==============================================

# Example 1: Remote VMs with IP addresses
# KAFKA_BROKERS=10.0.1.10:9092,10.0.1.11:9092,10.0.1.12:9092

# Example 2: Remote VMs with hostnames
# KAFKA_BROKERS=kafka1.company.com:9092,kafka2.company.com:9092,kafka3.company.com:9092

# Example 3: Cloud deployment
# KAFKA_BROKERS=kafka-1.cloud.provider.com:9092,kafka-2.cloud.provider.com:9092,kafka-3.cloud.provider.com:9092

# Example 4: High throughput test
# NUM_PRODUCERS=20
# MESSAGES_PER_PRODUCER=50000
# MESSAGE_SIZE_BYTES=10240

# ==============================================
# Security Configuration (if enabled)
# ==============================================

# Uncomment and configure if your cluster uses authentication

# KAFKA_SECURITY_PROTOCOL=SASL_SSL
# KAFKA_SASL_MECHANISM=PLAIN
# KAFKA_SASL_USERNAME=your-username
# KAFKA_SASL_PASSWORD=your-password
# KAFKA_SSL_CA_LOCATION=/path/to/ca-cert
# KAFKA_SSL_CERTIFICATE_LOCATION=/path/to/client-cert
# KAFKA_SSL_KEY_LOCATION=/path/to/client-key
