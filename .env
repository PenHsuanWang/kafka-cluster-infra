# Kafka Cluster Configuration
COMPOSE_PROJECT_NAME=kafka-prod-cluster

# Kafka Version
KAFKA_VERSION=7.5.0

# External Access (change these based on your environment)
EXTERNAL_KAFKA_1_HOST=localhost
EXTERNAL_KAFKA_2_HOST=localhost
EXTERNAL_KAFKA_3_HOST=localhost

# Memory Settings (adjust based on available resources)
# Minimum 8GB heap recommended for production
KAFKA_HEAP_SIZE=8G

# Log Retention (in hours)
LOG_RETENTION_HOURS=168

# Network Settings
SUBNET=172.25.0.0/16
